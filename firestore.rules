rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Global API Usage collection (accessible by all authenticated users)
    match /globalApiUsage/{apiType} {
      allow read, write: if isAuthenticated();
    }
    
    // AI Insights Cache (per user)
    match /aiInsights/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }
    
    // AI Insights History (per user)
    match /aiInsightsHistory/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
      
      // Weekly snapshots subcollection
      match /snapshots/{snapshotId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
    }
    
    // Users collection
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
      
      // Metrics subcollection
      match /metrics/{metricId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
      
      // Medications subcollection
      match /medications/{medId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
        
        // Doses subcollection
        match /doses/{doseId} {
          allow read, write: if isAuthenticated() && isOwner(userId);
        }
      }
      
      // Medication Intake subcollection
      match /medicationIntake/{intakeId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
      
      // Drug Interactions subcollection
      match /drugInteractions/{interactionId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
      
      // Adherence Stats subcollection
      match /adherenceStats/{statId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
      
      // Symptoms subcollection
      match /symptoms/{symptomId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
      
      // API Usage subcollection (for rate limiting)
      match /apiUsage/{apiType} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
    }
  }
}
